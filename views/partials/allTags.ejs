<script>
    const fetchData2 = () => {
        fetch('/api/v1/tags')
            .then(response => response.json())
            .then(data => {
                const container = document.getElementById('tagContainer');
                container.innerHTML = ''; // Clear the container

                data.forEach(tag => {
                    const button = document.createElement('button'); // Create a new button element
                    button.textContent = tag.name; // Set the button text to the tag name
                    button.style.height="60px";
              
                    button.classList.add('btn', 'btn-dark', 'm-2','col-4'); // Optionally, add Bootstrap classes for styling
                    button.onclick = () => {
                        alert(`Tag selected: ${tag.name}`);
                        // You can replace this with any action you want to trigger on button click
                    };
                    container.appendChild(button); // Append the button to the container

                });
            })
            .catch(error => console.error('Error fetching tags:', error));
    }

    const filterByTag = (tag) => {
        const filteredData = allData.filter(training => 
            training.name.includes(tag) || training.description.includes(tag)
        );
        populateFilteredResults(filteredData);
    }

    // Call fetchData2 when the script runs
    fetchData2();
</script>